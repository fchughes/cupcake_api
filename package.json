{
  "name": "8flow_cupcake",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "openapi": "openapi typegen ./cupcake_storev1_openapi3.0.yml > src/types/openapi.d.ts",
    "test": "npm run build:ts && tsc -p test/tsconfig.json && node --test -r ts-node/register test/**/*.ts",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fchughes/8flow_cupcake.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fchughes/8flow_cupcake/issues"
  },
  "homepage": "https://github.com/fchughes/8flow_cupcake#readme",
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/mongodb": "^8.0.0",
    "@fastify/sensible": "^5.0.0",
    "fastify": "^4.0.0",
    "fastify-cli": "^6.1.0",
    "fastify-plugin": "^4.0.0",
    "mongodb": "^6.3.0",
    "openapi-backend": "^5.10.6"
  },
  "devDependencies": {
    "@types/node": "^20.4.4",
    "concurrently": "^8.2.2",
    "fastify-tsconfig": "^2.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^5.2.2"
  }
}